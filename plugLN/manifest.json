{
  "description": "Should be a plugin to pay Lightninginvoices.",
  "manifest_version": 2,
  "name": "plugLN",
  "version": "0.1",

  "icons": {
    "400": "icons/BitcoinLN.jpg"
  },

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "tabs",
    "notifications",
    "storage"
  ],

  "options_ui": {
    "page": "settings/options.html"
  },

  "browser_action": {
    "default_icon": "icons/BitcoinLN.jpg",
    "default_title": "Opens plugLN GUI",
    "default_popup": "app/app.html"
  },

  "background": {
    "scripts": [
      "scripts/background/listen402.js"
    ]
  },
  "applications": {
    "gecko": {
      "id": "plugLN@wasgehtab.com",
    }
}
